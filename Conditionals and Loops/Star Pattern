import java.util.*;
public class Solution
{
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int i,j,space;
		int n = s.nextInt();
		for(i=1;i<=n;i++)
		{
		    for(space=1;space<=n-i;space++)
		    {
		        
		        System.out.print(" ");
		        
		    }
		    
		    for(j=1;j<=(2*i)-1;j++)
		    {
		        System.out.print("*");
		       
                
		    }
		    System.out.println();
		    
		}
	}
}
