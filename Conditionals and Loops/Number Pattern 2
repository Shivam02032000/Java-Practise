import java.util.*;
public class Solution {


	public static void main(String[] args) {
		
		Scanner s= new Scanner(System.in);
		int n=s.nextInt();
		int i=1;
		while(i<=n)
		{
		    int space=1;
		    int val=i;
		    int j=1;
		    while(space<=n-i)
		    {
		        System.out.print(" ");
		        space=space+1;
		    }
		    while(j<=i)
		    {
		       System.out.print(val); 
		        val=val+1;
		        j=j+1;
		        
		    }
		    i=i+1;
		    System.out.println();
		}
	}	
}
